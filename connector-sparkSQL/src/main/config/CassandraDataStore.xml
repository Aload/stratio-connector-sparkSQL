<DataStore>
    <Name>cassandra</Name>
    <Version>2.1.3</Version>
    <RequiredProperties>
        <Property>
            <PropertyName>hosts</PropertyName>
            <Description>IP1, IP2, ... IPn. Comma separated hosts of Cassandra cluster.</Description>
        </Property>
        <Property>
            <PropertyName>cluster</PropertyName>
            <Description>Cassandra cluster name</Description>
        </Property>
    </RequiredProperties>
    <OptionalProperties>
        <Property>
            <PropertyName>nativePort</PropertyName>
            <Description>The Cassandra Native Port.</Description>
        </Property>
        <Property>
            <PropertyName>rpcPort</PropertyName>
            <Description>The Cassandra RPC Port.</Description>
        </Property>
    </OptionalProperties>
</DataStore>